<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataInput">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category of Item" />

                    <RadioGroup
                        android:id="@+id/u_category_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/u_fruit_veg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fruits Vegetables" />

                        <RadioButton
                            android:id="@+id/u_dairy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dairy" />

                        <RadioButton
                            android:id="@+id/u_meat_fish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Meat Fish" />

                        <RadioButton
                            android:id="@+id/u_spices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Spices Condiments" />

                        <RadioButton
                            android:id="@+id/u_frozen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Frozen" />

                        <RadioButton
                            android:id="@+id/u_snacks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Snacks" />

                        <RadioButton
                            android:id="@+id/u_beverages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Beverages" />

                        <RadioButton
                            android:id="@+id/u_house_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Household Items" />

                        <RadioButton
                            android:id="@+id/u_others"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Others" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_name_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Item" />

                    <EditText
                        android:id="@+id/u_enter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity of Item" />

                    <EditText
                        android:id="@+id/u_enter_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_photo_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo of Category" />

                    <Button
                        android:id="@+id/u_read_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read Image" />

                    <ImageView
                        android:id="@+id/u_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Shop" />

                    <EditText
                        android:id="@+id/u_enter_shopname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_lat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude" />

                    <EditText
                        android:id="@+id/u_latitude_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/u_lon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude" />

                    <EditText
                        android:id="@+id/u_longitude_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </TableRow>
            </TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/u_button_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Update"
                    android:textAlignment="center"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/u_button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="175dp"
                    android:layout_marginRight="25dp"
                    android:text="Delete" />
            </TableRow>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>